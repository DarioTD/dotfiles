#!/bin/bash
userresources=$HOME/.Xresources
usermodmap=$HOME/.Xmodmap

# merge in defaults and keymaps
if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

#export LD_LIBRARY_PATH=/usr/lib64/nvidia/:/usr/lib32/nvidia:/usr/lib:${LD_LIBRARY_PATH}
#export VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/nvidia_icd.x86_64.json:/usr/share/vulkan/icd.d/nvidia_icd.i686.json
export VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/nvidia_icd.json

xrandr --setprovideroutputsource modesetting NVIDIA-0
xrandr --auto

## Autostart
setxkbmap latam &
nitrogen --restore &
#sxhkd -c $HOME/.config/sxhkd/sxhkdrc.bspwm &
sxhkd -c $HOME/.config/sxhkd/sxhkdrc.dwm &

#$HOME/.scripts/status_dGPU &
dwmblocks &

#exec i3
#exec bspwm
exec dwm
